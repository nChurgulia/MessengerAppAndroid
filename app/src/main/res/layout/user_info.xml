<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="@dimen/user_padding">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/user_offset"
        android:layout_marginEnd="@dimen/user_right_margin"
        app:cardCornerRadius="@dimen/user_photo_size"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="@dimen/user_photo_size"
            android:layout_height="@dimen/user_photo_size"
            android:src="@drawable/avatar_image_placeholder"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:contentDescription="@string/profile_photo" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfield_text_size"
            android:textColor="@color/black"
            tools:text="Tour De Bhutan"/>

        <TextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Manager"/>

    </LinearLayout>

</LinearLayout>